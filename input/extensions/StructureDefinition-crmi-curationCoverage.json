{
  "resourceType": "StructureDefinition",
  "id": "crmi-curationCoverage",
  "url": "http://hl7.org/fhir/uv/crmi/StructureDefinition/crmi-curationCoverage",
  "version": "1.0.0",
  "name": "CrmiCurationCoverage",
  "title": "CRMI Curation Coverage",
  "status": "active",
  "experimental": false,
  "date": "2026-02-11",
  "publisher": "HL7 Clinical Reasoning Management Infrastructure (CRMI)",
  "description": "Indicates the relative completeness and clinical curation coverage of the codes and referenced groupings represented by a value set.",
  "purpose": "Provides a machine-readable signal describing whether the value set content has been fully curated or may contain gaps, supporting trust and fitness-for-use decisions in analytics and public health workflows.",
  "kind": "complex-type",
  "abstract": false,
  "type": "Extension",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/Extension",
  "derivation": "constraint",
  "context": [
    {
      "type": "element",
      "expression": "ValueSet"
    }
  ],
  "constraint": [
    {
      "key": "ccov-1",
      "severity": "error",
      "human": "If status is partial, statusReason SHALL be provided.",
      "expression": "extension.where(url = 'status').value.coding.code = 'partial' implies extension.where(url = 'statusReason').exists()"
    }
  ],
  "differential": {
    "element": [
      {
        "id": "Extension",
        "path": "Extension",
        "short": "Relative curation level of the codes in the value set",
        "definition": "Represents the stewardâ€™s assessment of the completeness of clinical curation for the value set, including whether relevant codes or referenced component value sets may be missing.",
        "min": 0,
        "max": "1"
      },
      {
        "id": "Extension.value[x]",
        "path": "Extension.value[x]",
        "max": "0"
      },
      {
        "id": "Extension.extension",
        "path": "Extension.extension",
        "slicing": {
          "discriminator": [
            {
              "type": "value",
              "path": "url"
            }
          ],
          "rules": "open"
        }
      },
      {
        "id": "Extension.extension:status",
        "path": "Extension.extension",
        "sliceName": "status",
        "min": 1,
        "max": "1"
      },
      {
        "id": "Extension.extension:status.url",
        "path": "Extension.extension.url",
        "fixedUri": "status"
      },
      {
        "id": "Extension.extension:status.valueCodeableConcept",
        "path": "Extension.extension.valueCodeableConcept",
        "min": 1,
        "max": "1",
        "binding": {
          "strength": "extensible",
          "valueSet": "http://terminology.hl7.org/ValueSet/crmi-curation-coverage-status-codes"
        }
      },
      {
        "id": "Extension.extension:statusReason",
        "path": "Extension.extension",
        "sliceName": "statusReason",
        "min": 0,
        "max": "1"
      },
      {
        "id": "Extension.extension:statusReason.url",
        "path": "Extension.extension.url",
        "fixedUri": "statusReason"
      },
      {
        "id": "Extension.extension:statusReason.valueMarkdown",
        "path": "Extension.extension.valueMarkdown",
        "min": 1,
        "max": "1"
      },
      {
        "id": "Extension.extension:author",
        "path": "Extension.extension",
        "sliceName": "author",
        "min": 0,
        "max": "1"
      },
      {
        "id": "Extension.extension:author.url",
        "path": "Extension.extension.url",
        "fixedUri": "author"
      },
      {
        "id": "Extension.extension:author.valueString",
        "path": "Extension.extension.valueString",
        "min": 1,
        "max": "1"
      },
      {
        "id": "Extension.extension:dateTime",
        "path": "Extension.extension",
        "sliceName": "dateTime",
        "min": 0,
        "max": "1"
      },
      {
        "id": "Extension.extension:dateTime.url",
        "path": "Extension.extension.url",
        "fixedUri": "dateTime"
      },
      {
        "id": "Extension.extension:dateTime.valueDateTime",
        "path": "Extension.extension.valueDateTime",
        "min": 1,
        "max": "1"
      },
      {
        "id": "Extension.extension:note",
        "path": "Extension.extension",
        "sliceName": "note",
        "min": 0,
        "max": "1"
      },
      {
        "id": "Extension.extension:note.url",
        "path": "Extension.extension.url",
        "fixedUri": "note"
      },
      {
        "id": "Extension.extension:note.valueMarkdown",
        "path": "Extension.extension.valueMarkdown",
        "min": 1,
        "max": "1"
      }
    ]
  }
}
